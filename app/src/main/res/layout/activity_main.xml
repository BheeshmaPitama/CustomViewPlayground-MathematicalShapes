<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.anubhav.customviewplayground_mathematicalshapes.squircle.SuperEllipseView
        android:id="@+id/squircleView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderColor="@color/black"
        app:borderWidth="2dp"
        app:fillColor="@color/black"
        app:radius="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/squircleView"
        app:layout_constraintBottom_toBottomOf="@id/squircleView"
        app:layout_constraintStart_toStartOf="@id/squircleView"
        app:layout_constraintEnd_toEndOf="@id/squircleView"/>


</androidx.constraintlayout.widget.ConstraintLayout>